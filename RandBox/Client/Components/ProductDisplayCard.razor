@inject NavigationManager Navigation

<div class="product-card row d-flex g-0" @onclick=NavigateToProductDetails>
    <div class="h-50 flex-grow-0">
        <img class="h-50" src="@Product!.ThumbnailURL" />
        @if (Product.Country == null)
        {
            <h2>Loading Country</h2>
        }
        else
        {
            <div class="randbox-badge" style="background-color: @Product.Country!.BadgeColour">@Product.Country!.Name</div>
        }
    </div>
    <div class="info d-flex justify-content-between">
        <h3 class="product-name mb-2">@Product!.Name</h3>
        <p class="desc m-0">@Product!.Description</p>

        <div class="bottom-info d-flex justify-content-between mt-2">
            <p class="category-name mb-0">@Product.Category!.Name</p>
            <p class="price mb-0">$@Product!.DiscountedPrice</p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Product? Product { get; set; }

    private void NavigateToProductDetails()
    {
        Navigation.NavigateTo($"/product-details/{Product!.ProductID}");
    }
}