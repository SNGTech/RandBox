<div class="product-card row d-flex g-0">
    <div class="h-50">
        <img class="h-50" src="@Product!.ThumbnailURL" />
        @if (Product.Country == null)
        {
            <h2>Loading Country</h2>
        }
        else
        {
            <div class="randbox-badge" style="background-color: @Product.Country!.BadgeColour">@Product.Country!.Name</div>
        }
    </div>
    <div class="info">
        <h3 class="product-name mb-4">@Product!.Name</h3>
        <p class="stock-info mb-4">Stock: @Product!.StockNo</p>

        <div class="bottom-info d-flex justify-content-between">
            <p class="category-name mb-0">@Product.Category!.Name</p>
            <p class="price mb-0">$@Product!.DiscountedPrice</p>
        </div>
    </div>
</div>

@code {
	[Parameter]
	public Product? Product { get; set; }
}